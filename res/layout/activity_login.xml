<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/found_flbtn"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".views.activitys.LoginActivity">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/activity_login_logo"
                android:layout_marginBottom="@dimen/activity_login_logo"
                app:srcCompat="@drawable/logo2" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_user"
                android:layout_marginTop="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorGris"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/colorAccent"
                app:counterOverflowTextColor="@color/colorAccent"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:layout_marginTop="10dp"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/colorGris"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/colorAccent"
                app:counterOverflowTextColor="@color/colorAccent"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:textColor="@color/white"
                android:enabled="true"
                app:cornerRadius="23dp"
                android:text="@string/action_sign_in"
                app:backgroundTint="@color/colorAccent"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                app:cornerRadius="23dp"
                android:textColor="@color/colorAccent"
                android:enabled="true"
                android:text="@string/action_sign_up"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="3dp"
                />

            <TextView
                android:textColor="@color/colorAccent"
                android:text="Me olvide la contraseÃ±a"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginTop="50dp"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>